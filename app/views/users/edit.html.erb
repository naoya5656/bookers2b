<body>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
        
        <%= form_with model: @user do |f| %>
        <div class="form-group">
          <div><%= f.label :name %></div>
          <div><%= f.text_field :name %></div>
        </div>
        <div class="form-group">
          <div><%= f.label :image %></div>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
        <div class="form-group">
          <div><%= f.label :Introduction %></div>
          <div><%= f.text_area :introduction %></div>
        </div>
        <%= f.submit "Update User", class:"btn btn-secondary" %>
        <% end %>
      </div>
    </div>
  </div>
</body>

